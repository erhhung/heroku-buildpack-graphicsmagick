# package versions
GRAPHICS_MAGICK_VERSION="1.3.18"
  LIBJPEG_TURBO_VERSION="1.3.0"
         LIBPNG_VERSION="1.6.17"
           ZLIB_VERSION="1.2.8"
           NASM_VERSION="2.10.09"

# package locations on s3
ORIGINAL_S3_PATH="heroku-buildpack-graphicsmagick/cedar-14"
OVERRIDE_S3_PATH="crystalvista/devtools"

# package paths at s3.amazonaws.com
GRAPHICS_MAGICK_TARBALL="${ORIGINAL_S3_PATH}/graphicsmagick-${GRAPHICS_MAGICK_VERSION}.tgz"
  LIBJPEG_TURBO_TARBALL="${ORIGINAL_S3_PATH}/libjpeg-turbo-${LIBJPEG_TURBO_VERSION}.tgz"
         LIBPNG_TARBALL="${OVERRIDE_S3_PATH}/libpng-${LIBPNG_VERSION}.tar.gz"
           ZLIB_TARBALL="${ORIGINAL_S3_PATH}/zlib-${ZLIB_VERSION}.tgz"
           NASM_TARBALL="${ORIGINAL_S3_PATH}/nasm-${NASM_VERSION}.tgz"

# installed paths under /app/vendor
GRAPHICS_MAGICK_DIR="graphicsmagick"
  LIBJPEG_TURBO_DIR="libjpeg-turbo"
         LIBPNG_DIR="libpng"
           ZLIB_DIR="zlib"
           NASM_DIR="nasm"
